#include <atmel/samc2x.dtsi>

/ {

	soc {
		dmac: dmac@41006000 {
			compatible = "atmel,sam0-dmac";
			reg = <0x41006000 0x50>;
			interrupts = <7 0>;
			label = "DMA_0";
			#dma-cells = <2>;
		};

		tc0: tc@42003000 {
			compatible = "atmel,sam0-tc32";
			reg = <0x42003000 0x40>;
			interrupts = <20 0>;
			label = "TIMER_6";
			clocks = <&gclk 0x1d>, <&pm 0x20 14>;
			clock-names = "GCLK", "PM";
		};

		tcc0: tcc@42002000 {
			compatible = "atmel,sam0-tcc";
			reg = <0x42002000 0x80>;
			interrupts = <17 0>;
			label = "TCC_0";
			clocks = <&gclk 26>, <&pm 0x20 8>;
			clock-names = "GCLK", "PM";

			channels = <4>;
			counter-size = <24>;
		};

		tcc1: tcc@42002400 {
			compatible = "atmel,sam0-tcc";
			reg = <0x42002400 0x80>;
			interrupts = <18 0>;
			label = "TCC_1";
			clocks = <&gclk 26>, <&pm 0x20 9>;
			clock-names = "GCLK", "PM";

			channels = <2>;
			counter-size = <24>;
		};

		tcc2: tcc@42002800 {
			compatible = "atmel,sam0-tcc";
			reg = <0x42002800 0x80>;
			interrupts = <19 0>;
			label = "TCC_2";
			clocks = <&gclk 27>, <&pm 0x20 10>;
			clock-names = "GCLK", "PM";

			channels = <2>;
			counter-size = <16>;
		};
		
		can {
			compatible = "bosch,m-can-base";
			#address-cells = <1>;
			#size-cells = <1>;
			std-filter-elements = <28>;
			ext-filter-elements = <8>;
			rx-fifo0-elements = <3>;
			rx-fifo1-elements = <3>;
			rx-buffer-elements = <0>;
			tx-buffer-elements = <1>;

			can0: can@42001C00 {
				compatible = "atmel,sam0-can";
				reg = <0x42001C00 0x100>;
				reg-names = "m_can";
				interrupts = <15 0>;
				interrupt-names = "LINE_01";
				peripheral-id = <15>;
				sjw = <1>;
				sample-point = <875>;
				sjw-data = <1>;
				sample-point-data = <875>;
				status = "disabled";
				label = "CAN_0";
			};

			can1: can@42002000 {
				compatible = "atmel,sam0-can";
				reg = <0x42002000 0x100>;
				reg-names = "m_can";
				interrupts = <16 0>;
				interrupt-names = "LINE_01";
				peripheral-id = <16>;
				sjw = <1>;
				sample-point = <875>;
				sjw-data = <1>;
				sample-point-data = <875>;
				status = "disabled";
				label = "CAN_1";
			};
		};		
	};
};

&dac0 {
	interrupts = <28 0>;
	clocks = <&gclk 33>, <&pm 0x20 18>;
	clock-names = "GCLK", "PM";
};

&sercom0 {
	interrupts = <9 0>;
	clocks = <&gclk 2>, <&mclk 0x20 2>;
	clock-names = "GCLK", "MCLK";
};

&sercom1 {
	interrupts = <10 0>;
	clocks = <&gclk 2>, <&mclk 0x20 3>;
	clock-names = "GCLK", "MCLK";
};

&sercom2 {
	interrupts = <11 0>;
	clocks = <&gclk 2>, <&mclk 0x20 4>;
	clock-names = "GCLK", "MCLK";
};

&sercom3 {
	interrupts = <12 0>;
	clocks = <&gclk 2>, <&mclk 0x20 5>;
	clock-names = "GCLK", "MCLK";
};

&sercom4 {
	interrupts = <13 0>;
	clocks = <&gclk 2>, <&mclk 0x20 6>;
	clock-names = "GCLK", "MCLK";
};

&sercom5 {
	interrupts = <14 0>;
	clocks = <&gclk 2>, <&mclk 0x20 7>;
	clock-names = "GCLK", "MCLK";
};

&tc4 {
	interrupts = <24 0>;
	clocks = <&gclk 0x1c>, <&pm 0x20 12>;
	clock-names = "GCLK", "PM";
};

&adc0 {
	clocks = <&gclk 0x1e>, <&pm 0x20 16>;
	clock-names = "GCLK", "PM";
	interrupts = <25 0>;
	interrupt-names = "resrdy";
};

/* FIXME */
&adc1 {
	clocks = <&gclk 0x1e>, <&pm 0x20 16>;
	clock-names = "GCLK", "PM";
	interrupts = <25 0>;
	interrupt-names = "resrdy";
};
